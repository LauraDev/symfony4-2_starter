{% extends 'base.html.twig' %}

{% block title 'registration' | trans %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4"></div>

            <div class="col-md-4">
                <h1>{{ 'registration' | trans }}</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="mt-3">
                    <button class="btn btn-lg btn-primary">{{ 'register' | trans }}</button>
                    <a href="{{ path('home') }}"
                       class="btn btn-lg btn-secondary">{{ 'cancel' | trans }}</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}